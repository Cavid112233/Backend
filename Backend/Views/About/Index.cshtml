@model AboutVM
@{
    ViewData["Title"]="index";
}
<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>@Model.AboutBanner.FirstTitle</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- About Start -->
<div class="about-area pt-145 pb-155">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <div class="about-content">
                    <h2>@Model.AboutBanner.SecondTitle</h2>
                    <p>@Model.AboutBanner.Description</p>
                  
                    <a class="default-btn" asp-action="index">@Model.AboutBanner.ButtonTitle</a>
                </div>
            </div>
            <div class="col-md-6 col-sm-6">
                <div class="about-img">
                    <img src="~/img/about/@Model.AboutBanner.ImageUrl" alt="about">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- About End -->
<!-- Teacher Start -->
<div class="teacher-area pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title text-center">
                    <img src="~/img/icon/section.png" alt="title">
                    <h2>meet our teachers</h2>
                </div>
            </div>
        </div>
        <div class="row">

            
                @foreach (var item in Model.Teachers)
                {
                    <div class="col-md-3 col-sm-4 col-xs-12">
                        <div class="single-teacher mb-45">
                            <div class="single-teacher-img">
                                <a asp-controller="teacher" asp-action="teacherdetails" asp-route-id="@item.Id"><img src="~/img/teacher/@item.ImageUrl" alt="teacher"></a>
                            </div>
                            <div class="single-teacher-content text-center">
                                <h2><a href="teacher-details.html">@item.TeacherName</a></h2>
                                <h4>@item.Profession</h4>
                                <ul>
                                    <li><a href="@item.Contact.FirstOrDefault().Facebook"><i class="zmdi zmdi-facebook"></i></a></li>
                                    <li><a href="@item.Contact.FirstOrDefault().Pinterest"><i class="zmdi zmdi-pinterest"></i></a></li>
                                    <li><a href="@item.Contact.FirstOrDefault().Vimeo"><i class="zmdi zmdi-vimeo"></i></a></li>
                                    <li><a href="@item.Contact.FirstOrDefault().Twitter"><i class="zmdi zmdi-twitter"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            
           
        </div>
    </div>
</div>
<!-- Teacher End -->
<!-- Testimonial Area Start -->
<div class="testimonial-area pt-110 pb-105 text-center">
    <div class="container">
        <div class="row">
            <div class="testimonial-owl owl-theme owl-carousel">
                <div class="col-md-8 col-md-offset-2 col-sm-12">
                    <div class="single-testimonial">
                        <div class="testimonial-info">
                            <div class="testimonial-img">
                                <img src="~/img/testimonial/@Model.SliderTestimonial.ImageUrl" alt="testimonial">
                            </div>
                            <div class="testimonial-content">
                                <p>@Model.SliderTestimonial.Description</p>
                                <h4>@Model.SliderTestimonial.Name</h4>
                                <h5>@Model.SliderTestimonial.Profession</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Testimonial Area End -->
<!-- Notice Start -->
<section class="notice-area two pt-140 pb-100">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-right-wrapper mb-25 pb-25">
                    <h3>@Model.AboutVideo.Title</h3>
                    <div class="notice-video">
                        <div class="video-icon video-hover">
                            <a class="video-popup" href="@Model.AboutVideo.VideoUrl">
                                <i class="zmdi zmdi-play"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-left-wrapper">
                    <h3>notice board</h3>
                    <div class="notice-left">

                        @foreach(var item in Model.Events)
                        {
                            <div class="single-notice-left mb-23 pb-20">

                                <h4>@item.ExactDate</h4>
                                <p>@item.Description.Substring(0,200) </p>
                            </div>
                        }

                       
                   
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Notice End -->
@await Html.PartialAsync("_SubscribeNow",new SubscribeVM());
