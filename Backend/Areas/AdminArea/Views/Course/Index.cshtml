@model List<Course>
@{
    ViewData["Title"] = "index";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Course Table</h4>
                    <p class="card-description">
                        <a asp-controller="course" asp-action="create">Add Course </a>
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>CourseImage</th>
                                    <th>CourseName</th>
                                    <th>Description</th>
                                    <th>CourseCount</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <img width="160" height="160" src="~/img/course/@item.ImageUrl">
                                        </td>
                                        <td>@item.Name</td>

                                        <td>@item.Description</td>
                                        <td>@item.CourseCount</td>

                                        <td>
                                            <a asp-controller="course" asp-action="delete" asp-route-id="@item.Id" class="btn btn-outline-danger "><i class="mdi mdi-delete"></i></a>
                                            <a asp-controller="course" asp-action="update" asp-route-id="@item.Id" class="btn btn-outline-warning"><i class="mdi mdi-table-edit"></i></a>
                                            <a asp-controller="course" asp-action="detail" asp-route-id="@item.Id" class="btn btn-outline-info"><i class="mdi mdi-account-card-details"></i></a>
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>